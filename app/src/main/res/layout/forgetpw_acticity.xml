<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="29dp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="29dp"
                android:background="@mipmap/black"
                android:onClick="click"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="19sp"
                android:textColor="#444"
                android:text="返回"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/logo" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"

        android:orientation="vertical">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_vertical"-->
            <!--&gt;-->

            <!--<View-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="match_parent" />-->
            <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->


                <!--android:background="@mipmap/people"/>-->
            <!--<EditText-->
                <!--android:id="@+id/edit_name"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:theme="@style/MyEditText"-->
                <!--android:hint="请输入姓名" />-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"


                android:background="@mipmap/photo"/>
            <EditText
                android:id="@+id/edit_fgpwphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:background="@null"
                android:theme="@style/MyEditText"
                android:hint="请输入注册手机号码" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#444"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"


                android:background="@mipmap/yanzheng"/>

        <EditText
            android:id="@+id/edit_fgpwidentifying"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:theme="@style/MyEditText"
            android:inputType="numberDecimal"
            android:background="@null"
            android:hint="请输入手机验证码" />
          <com.silence.commonframe.utils.TimeButton
              android:layout_width="0dp"
              android:layout_height="30dp"
              android:id="@+id/btn_identifying"
              android:background="@mipmap/blue1"
              android:layout_weight="1"
              android:textSize="10sp"
              android:textColor="#ffffff"
              android:gravity="center"
              android:text="获取验证码"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#444"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"


                android:background="@mipmap/passworld"/>
            <EditText
                android:id="@+id/edit_fgpwpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:theme="@style/MyEditText"
                android:background="@null"
                android:hint="请输入密码" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#444"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"


                android:background="@mipmap/passworld"/>
            <EditText
                android:id="@+id/edit_fgpwpassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:theme="@style/MyEditText"
                android:background="@null"
                android:hint="请再次输入密码" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#444"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_fgpw"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@mipmap/login"
                android:textColor="#fff"
                android:text="提交" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="vertical">


    </LinearLayout>
</LinearLayout>