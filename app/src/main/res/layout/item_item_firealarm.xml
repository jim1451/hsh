            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="我知道了"/>-->

            <!--</LinearLayout>-->


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
