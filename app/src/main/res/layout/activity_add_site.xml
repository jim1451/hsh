<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddSiteActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="#000000">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#000000">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:onClick="click"
            android:background="@mipmap/black" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp"
            android:text="返回" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="19sp"
                android:text="添加场所"/>
        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView_comfirm"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp"
            android:onClick="click1"
            android:text="确认" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.amap.api.maps.MapView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#cccccc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="场所名称：" />

           <EditText
               android:layout_width="275dp"
               android:layout_height="45dp"
               android:id="@+id/edit_site"
               android:background="#fff"
               android:text=""
               android:theme="@style/MyEditText"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="区域名称：" />

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:textSize="11sp"
                android:gravity="left|center"
                android:textColor="#000"
                android:id="@+id/textView_site1"
                android:text="区域名称!!!!:" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="horizontal">

            <TextView

                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="详细地址：" />

            <!--<EditText-->
                <!--android:layout_width="149dp"-->
                <!--android:layout_height="69dp"-->
                <!--android:id="@+id/edit_detailedsite"-->

                <!--android:theme="@style/MyEditText"/>-->

            <EditText
                android:layout_width="255dp"
                android:layout_height="55dp"
                android:textSize="11sp"
                android:id="@+id/edit_detailedsite"
                android:theme="@style/MyEditText"/>

        </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="#cccccc"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="负责人：" />

            <TextView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/tv_people"
                android:text="15946894561" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号：" />

            <TextView

                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_photo"
                android:gravity="center"
                android:text="15946894561" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#cccccc"></View>





        <TextView
            android:id="@+id/location_errInfo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="TextView" />
    </LinearLayout>




</LinearLayout>